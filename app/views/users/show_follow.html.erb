<% provide :title, @title %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user, Settings.app.user.size_gravatar %>
        <%= @user.name %>
      </h1>
      <span>
        <%= link_to t(".view_profile"), @user %>
      </span>
      <span>
        <b><%= t ".micropost" %></b>
        <%= @user.microposts.count %>
      </span>
    </section>
    <section>
      <%= render "shared/stats" %>
      <% if @users.any? %>
        <div class="user_avatars">
          <% @users.each do |user| %>
            <%= link_to gravatar_for(user, Settings.app.user.size_gravatar_30),
               user %>
          <% end %>
        </div>
      <% end %>
    </section>
  </aside>
  <div class="col-md-8">
    <h3>
      <%= @title %>
    </h3>
    <% if @users.any? %>
      <ul class="users follow">
        <%= render @users %>
      </ul>
      <%= will_paginate %>
    <% end %>
  </div>
</div>
