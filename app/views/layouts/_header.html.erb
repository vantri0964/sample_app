<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t( ".link_sample_app" ), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t( ".link_home" ), root_path %></li>
        <li><%= link_to t( ".link_help" ), help_path %></li>
        <% if logged_in? %>
          <li>
            <%= link_to t(".link_users"), users_path %>
          </li>
          <li class="dropdown">
            <%= link_to t(".link_acount"), "#", class: "dropdown-toggle",
              data: {toggle: "dropdown"} %>
            <ul class="dropdown-menu">
              <li>
                <%= link_to t(".link_profile"), current_user %>
              </li>
              <li>
                <%= link_to t(".link_setting"), edit_user_path(current_user) %>
              </li>
              <li class="divider"></li>
              <li>
                <%= link_to t(".link_logout"), logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li>
            <%= link_to t( ".link_log_in" ), login_path %>
          </li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
